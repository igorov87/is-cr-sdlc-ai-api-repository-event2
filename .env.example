# ================================================
# CONFIGURACIÓN GENERAL
# ================================================

# Nivel de logging: debug, info, warn, error
LOG_LEVEL=info

# Puerto en el que se ejecutará el servidor
PORT=8080

# ================================================
# CONFIGURACIÓN DE BASE DE DATOS POSTGRESQL (PROMETHEUS)
# ================================================

# Host de la base de datos PostgreSQL de Prometheus
PROMETHEUS_HOST=localhost

# Puerto de la base de datos PostgreSQL
PROMETHEUS_PORT=5432

# Nombre de la base de datos
PROMETHEUS_DATABASE=prometheus

# Usuario de la base de datos
PROMETHEUS_USER=postgres

# Contraseña de la base de datos
PROMETHEUS_PASSWORD=your_password_here

# ================================================
# CONFIGURACIÓN DE REGLAS DE NEGOCIO
# ================================================

# Ramas objetivo para el procesamiento (separadas por |)
# Ejemplo: dev|test|staging|main
TARGET_BRANCHES=dev|test

# ================================================
# CONFIGURACIÓN DE GOOGLE CLOUD PUB/SUB
# ================================================

# ID del proyecto de Google Cloud Platform
GCP_PROJECT_ID=your-gcp-project-id

# Topic de Pub/Sub para mensajes de validación de PR
PUBSUB_VALIDATION_TOPIC=pr-validation-topic

# Topic de Pub/Sub para mensajes de actualización de PR
PUBSUB_UPDATE_TOPIC=pr-update-topic

# Topic de Pub/Sub para mensajes de sincronización de documentos
PUBSUB_DOCUMENT_SYNC_TOPIC=document-sync-topic
